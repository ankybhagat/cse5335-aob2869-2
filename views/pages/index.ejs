    width: 50px;
    height: 40px;
    background: red;
    position: relative;
    -webkit-animation: mymove 5s infinite; /* Chrome, Safari, Opera */
    -webkit-animation-delay: 5s; /* Chrome, Safari, Opera */
    animation: mymove 5s infinite;
    animation-delay: 5s;
}

