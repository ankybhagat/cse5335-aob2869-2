  <script> 
  $('body').css('background-image', 'url("bg.jpg")');
  $( document ).ready(function() {
    $( "#button" ).click(function() {
      tableRows = "";
      docRowCount=0;
      ids=0;
      timeout();

    });

  
  function timeout(){
    setTimeout(function(){
       docRowCount++;
       ajax_call();
      

      },500);         
   }


  
 function ajax_call (){
  
  $.ajax({
  url: "/db",
  type: "get", //send it through get method
  
  data:({id:ids}),
  
  success: function(response) {
       datam = response;
    // console.log(datam.results[ids].code);
    console.log(ids);

     tableRows =  "<tr><td>"+datam.results[ids].code+"</td> <td>"+datam.results[ids].name+"</td> <td>"+datam.results[ids].population+"</td></tr>";
     if(ids>=20){
      last_row=$('#tbody1 tr:last');
      last_row.find('td').fadeOut('fast', 
        function(){ 
            last_row.remove();                    
        });

     }
     
    
    $( "#tbody1" ).prepend(tableRows);
                       
        ids++;
               
      timeout(); //calling timeout for 5 secs after displaying each record
      console.log(response);
  },
  error: function(xhr) {
    //Do Something to handle error
  }
});
  
 }

});

        
    </script>

  </head>
<body>


<h1 align="center"> Country Wise Population </h1>

     
      <button id="button"> Get Data </button>
      <table id="table1" width="100">
        <thead width="100">
            <tr>
              
              <th>Code</th>
              <th>Country</th>
              <th>Population</th>
              


            </tr>
        <thead>
        <tbody id="tbody1">
        
        </tbody>

      </table> 
  </body>
     
</html>
